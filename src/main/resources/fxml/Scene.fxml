<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="600" prefWidth="800" fx:controller="org.xtx.ut4converter.ui.MainSceneController" >
    <!-- MENU BAR -->
    <top>
        <MenuBar>
            <Menu text="File">
                <Menu text="Unreal 1 Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#handleConvertU1Map"/>
                </Menu>
                <Menu text="Unreal 2 Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#convertU2Map"/>
                </Menu>
                <Menu text="Unreal Tournament Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#handleConvert"/>
                </Menu>
                <Menu text="Unreal Tournament 2003 Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#convertUt2003Map"/>
                </Menu>
                <Menu text="Unreal Tournament 2004 Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#convertUt2004Map"/>
                </Menu>
                <Menu text="Unreal Tournament 3 Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#convertUt3Map"/>
                </Menu>
                <Menu text="UDK Map">
                    <MenuItem text="Convert to UT4 ..." onAction="#convertUdkMap"/>
                </Menu>
                <SeparatorMenuItem/>
                <MenuItem text="Exit" onAction="#handleExit" fx:id="menuExit"/>
            </Menu>
            <Menu text="Options" fx:id="menuOptions">
                <MenuItem text="Settings" onAction="#handleSettings" fx:id="menuSettings"/>
            </Menu>
            <Menu text="?">
                <MenuItem text="Check for updates" onAction="#openUtTopicUrl" fx:id="menuCheckForUpdates"/>
                <MenuItem text="About" onAction="#handleAbout" fx:id="menuItemAbout"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
