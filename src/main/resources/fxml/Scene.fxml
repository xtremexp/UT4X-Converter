<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane id="AnchorPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.xtx.ut4converter.ui.MainSceneController">
    <!-- MENU BAR -->
    <top>
        <MenuBar>
            <Menu text="File">
                <Menu text="Unreal 1">
                    <MenuItem onAction="#convertU1toUT3Map" text="Convert map to UT3 ..." />
                    <MenuItem onAction="#convertU1toUT4Map" text="Convert map to UT4 ..."/>
                </Menu>
                <Menu text="Unreal 2">
                    <MenuItem onAction="#convertU2ToUT3Map" text="Convert map to UT3 ..." />
                    <MenuItem onAction="#convertU2ToUT4Map" text="Convert map to UT4 ..." visible="false"/>
                    <MenuItem onAction="#extractTexturesFromU2Package" text="Extract textures from package ..." />
                </Menu>
                <Menu text="Unreal Tournament">
                    <MenuItem onAction="#convertUT99ToUT3Map" text="Convert map to UT3 ..." />
                    <MenuItem onAction="#convertUT99ToUT4Map" text="Convert map to UT4 ..." />
                </Menu>
                <Menu text="Unreal Tournament 2003">
                    <MenuItem onAction="#convertUT2003ToUT3Map" text="Convert map to UT3 ..." />
                    <MenuItem onAction="#convertUT2003ToUT4Map" text="Convert map to UT4 ..." visible="false"/>
                </Menu>
                <Menu text="Unreal Tournament 2004">
                    <MenuItem onAction="#convertUt2004ToUT3Map" text="Convert map to UT3 ..." />
                    <MenuItem onAction="#convertUt2004ToUT4Map" text="Convert map to UT4 ..." visible="false"/>
                </Menu>
                <Menu text="Unreal Tournament 3">
                    <MenuItem onAction="#convertUT3ToUT4Map" text="Convert map to UT4 ..." />
                </Menu>
                <Menu text="UDK">
                    <MenuItem onAction="#convertUdkToUT4Map" text="Convert map to UT4 ..." />
                </Menu>
                <SeparatorMenuItem />
                <MenuItem onAction="#handleExit" text="Exit" />
            </Menu>
            <Menu text="Options">
                <MenuItem onAction="#handleSettings" text="Settings" />
            </Menu>
            <Menu text="?">
                <MenuItem onAction="#openGitHubUrl" text="GitHub page" />
                <MenuItem onAction="#openGitHubUrlReleases" text="Check for updates" />
                <MenuItem onAction="#handleAbout" text="About UT4X Converter ..." />
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
